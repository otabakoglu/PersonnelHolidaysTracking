@model PersonnelHolidaysTracking.Core.Models.Personnel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Personnel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="PersonnelId" hidden class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PersonnelFirstName" class="control-label"></label>
                <input asp-for="PersonnelFirstName" class="form-control" />
                <span asp-validation-for="PersonnelFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonnelLastName" class="control-label"></label>
                <input asp-for="PersonnelLastName" class="form-control" />
                <span asp-validation-for="PersonnelLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkStartDate" class="control-label"></label>
                <input asp-for="WorkStartDate" class="form-control" />
                <span asp-validation-for="WorkStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DepartmentId" hidden class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 